{% extends 'base.html.twig' %}

{% block nav %}
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Guestbook Application Demo</a>
            </div>
        </div>
    </nav>
{% endblock %}

{% block main %}
    <br /><br /><br /><br />
    <main role="main">
        <div>
            <!-- Nav tabs -->
            {{ knp_menu_render('guestbook_menu', {'currentAsLink': true, 'compressed': true, 'currentClass': 'active', 'rootClass': 'nav nav-tabs nav-main', 'template': 'AppBundle:Menu:knp_menu.html.twig'}) }}
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active">
                    <div class="row">
                        <!-- Content -->
                        <div class="col-md-6">
                            {% block content %}
                            {% endblock %}
                        </div>
                        <!-- Sidebar -->
                        <div class="col-md-4 col-md-push-2">
                            {{ render(controller('AppBundle:Guestbook:sidebar')) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}